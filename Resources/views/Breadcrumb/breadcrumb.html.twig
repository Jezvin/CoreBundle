<ol class="breadcrumb">
    {% for item in breadcrumb %}
        {% if loop.last %}
            <li class="active">
                {% if loop.first %}
                    <i class="fa fa-dashboard"></i>&nbsp;
                {% endif %}
                {% if item.translateLabel %}
                    {{ (breadcrumb.translationPrefix ~ item.label) | trans }}
                {% else %}
                    {{ item.label }}
                {% endif %}
            </li>
        {% else %}
            <li>
                <a href="{{ item.url }}">
                    {% if loop.first %}
                        <i class="fa fa-dashboard"></i>
                    {% endif %}
                    {% if item.translateLabel %}
                        {{ (breadcrumb.translationPrefix ~ item.label) | trans }}
                    {% else %}
                        {{ item.label }}
                    {% endif %}
                </a>
            </li>
        {% endif %}
    {% endfor %}
</ol>